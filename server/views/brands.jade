include layout

doctype html
html
    +head()
        include ./widgets/table-pager
        include ./widgets/brands-table
        script(src="/js/brands.js")
    +body()
        .content-container
            .page-content
                h3.pull-left Brands
                .pull-right
                    -if(caller.role == 'admin' || caller.role == 'action-admin')
                        a.btn.btn-sm.btn-success(href="/brand/create/view", style="margin-top: 8px;") Create Brand
                .clearfix
                +brands_table()
                +table_pager()
        -if(typeof(caller) == 'undefined' || caller.role == 'user')
            +fixed_footer()