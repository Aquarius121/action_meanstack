include layout

doctype html
html
    +head()
        script(src="/js/tpl/jquery.form.min.js")
        script(src="/js/tpl/purl.js")
        script(src="/js/login.js")
        include modals/forgot-password
        include modals/set-password
        style.
            .login-page
            {
                background-color: #05d657;
                color: #fff;
                padding-bottom: 10px;

            }

            .login-page .login-form a
            {
                color: #fff !important;
                text-decoration: underline;
                font-size: 12pt;
            }

            .login-jumbotron {
                background-color: #efefef;
                color: #000000;
            }

            .login-jumbotron > div > img
            {
                width:100px;
                margin-top:20px;
                margin-bottom: 20px;
            }

            .login-jumbotron
            {
                font-size: 36pt;
            }

            .profile-form-container {
                margin-bottom: 10px;
            }
            a.forgot-password {
                top: 10px;
                position: relative;
            }
            .button-facebook {
                background-color: #3a5795;
                color: #fff;
                padding: 8px;
                padding-left: 10px;
                font-size: 14pt;
                vertical-align: bottom;
                text-align: left;
                height: 50px;
                transition: none;
                -webkit-transition: none;
            }
            .button-facebook > img {
                margin-right: 15px;
            }
            .button-google {
                background-color: #dd4b39;
                color: #ffffff;
                padding: 8px;
                padding-left: 10px;
                font-size: 14pt;
                vertical-align: bottom;
                text-align: left;
                margin-top: 10px;
                margin-bottom: 10px;
                height: 50px;
                transition: none;
                -webkit-transition: none;
            }
            .button-google > img {
                margin-right: 15px;
            }

    body.login-page
        +modal_forgot_password()
        +modal_set_password()
        header.index-header
            .container
                .navbar
                    a(href='/')
                        img(src='/img/logo.png').navbar-brand
                    .pull-right.button-container
                        a(href='/register').pill register
        .login-jumbotron.text-center(style="padding-left: 10px; padding-right: 10px")
            .centered-column
                img(src="/img/action_logo.png")
                br
                a.facebook-login.btn.button-facebook.col-xs-12
                    img(src="/img/facebook_icon.png" width="32" height="32")
                    |login with facebook
                a.google-login.btn.button-google.col-xs-12
                    img(src="/img/google_plus_icon.png" width="32" height="32")
                    |login with google plus
            .clearfix
        .login-form
            .centered-column
                .profile-form-container
                    form(action="/login", method="post", role="form").login-form.flex-form
                        .field
                            input.form-control(type="text", name="email", placeholder="email", id="input_email")
                        .field(style="margin-bottom: 10px;")
                            input.form-control(type="password", name="password", placeholder="password", id="input_password")
                        button.btn.btn-success.button-black.col-xs-12(type="submit", onclick="return valid();") Log In
                .clearfix
                .text-center
                    a.forgot-password(style="cursor: pointer;")
                        |Forgot password
        .clearfix