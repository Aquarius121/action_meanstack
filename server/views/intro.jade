include layout

doctype html
html
    +head()
        script(src="/js/tpl/slider/jssor.slider.min.js")
        script(src="/js/intro.js")
        style.
            .intro-slide {
                text-align: center;
            }

            .intro-slide div {
                color: white;
                margin-top: 10%;
                font-size: 50pt;
            }

            .intro-slide .logo {
                width: 120px;
                display: block;
                margin: 0 auto;
            }

            .intro-slide .logoLastSlide {
                width: 290px;
                height: 382px;
                margin-top: 58px;
            }

            .intro-slide .p1 {
                font-size: 30%;
                line-height: 30pt;
                margin-bottom: 30px;
            }

            .intro-slide .p22 {
                font-size: 20%;
                line-height: 15pt;
            }

            .intro-slide .p2 {
                font-size: 40%;
                margin-top: 100px;
                margin-bottom: 138px;
                line-height: 25pt;
            }

            .intro-slide .p3 {
                margin-top: 100px;
                margin-bottom: 150px;
                font-size: 64%;
                line-height: 50pt;
            }

            .intro-slide .whitebgCallout {
                background-color: white;
                color: black;
                font-size: 40%;
                padding: 40px;
                width: 60%;
                margin-left: auto;
                margin-right: auto;
                margin-bottom: 140px;
            }

            .intro-slide .padTop {
                margin-top: 150px;
            }

            .intro-slide .buttonNext {
                background-color: #00BD4B;
                color: #FFF;
                font-size: 34%;
                border-radius: 4px;
                width: 260px;
                height: 60px;
                padding: 12px;
            }
            .intro-slide div
            {
                margin-top: 10%;
                z-index: 1000;
            }

            .intro-slide img
            {
                z-index: -1;
            }


            .navBullet div, .navBullet div:hover, .navBullet .av
            {
                overflow:hidden;
                cursor: pointer;
            }

            .navBullet > div
            {
                border-style: solid;
                border-width: 3px;
                border-color: rgb(255, 255, 255);
                border-radius: 50%;
                background-color: rgba(255, 255, 255, 0);
                width: 30px;
                height: 30px;
                z-index: 615;
                box-shadow: 0 0 5px black !important;
            }

            .navBullet div:hover, .jssorb03 .av:hover {
                background-color: #ffffff;
            }
            .navBullet .av {
                background-color: #ffffff;
            }
            .navBullet .dn, .navBullet .dn:hover {
                background-color: #ffffff;
            }

