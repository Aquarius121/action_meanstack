block append scripts
    link(type='text/css', href='/stylesheets/select2/select2.min.css',  rel='stylesheet')
    script(src='/js/tpl/select2.min.js', type='text/javascript')
    script(src='/js/widgets/brand-select.js')

mixin brand_select(classname, style_attrs, brand)
    input.brand-select-widget(class=classname, style=style_attrs, value=(typeof(brand) != 'undefined' ? brand._id : ""), data-brand-name=(typeof(brand) != 'undefined' ? brand.name : ""))