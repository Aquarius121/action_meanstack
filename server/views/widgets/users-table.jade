include ./table-pager
include ./sortable-table

mixin users_table()
    table.table.table-bordered.table-striped.tablesorter-hover.users-table(style="display: none;")
        thead
            tr
                th Last Name
                th First Name
                th Email
                th Role
                th Survey Completed
        tbody

block append scripts
    script(src='/js/tpl/purl.js', type='text/javascript')
    script(src='/js/widgets/tables/users-table.js', type='text/javascript')