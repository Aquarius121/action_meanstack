block append scripts
    link(rel='stylesheet', href='/stylesheets/bootstrap-tags.css')
    script(src='/js/tpl/bootstrap-tags.min.js', type='text/javascript')
    script(src='/js/widgets/brand-tags-widget.js', type='text/javascript')

mixin brand_tags_widget()
    -var brand_ids_string = '';
        -if(typeof(user.managed_brands) != 'undefined')
            -each brand_id in user.managed_brands
                -brand_ids_string += (brand_ids_string.length > 0 ? ',' + brand_id : brand_id);
        .tag-list.managed-brands(data-ids=brand_ids_string)