include layout

doctype html
html
    +head()
        script(src='/js/tpl/flot/jquery.flot.min.js')
        script(src='/js/tpl/flot/jquery.flot.pie.js')
        script(src="/js/widgets/charts/cpu-chart.js")
        script(src="/js/widgets/charts/disk-usage-chart.js")
        script(src="/js/widgets/databases-widget.js")
        script(src="/js/widgets/system-info-widget.js")
        script(src="/js/system-resources.js")
        style.
            .meter {
                height: 20px;
                position: relative;
                background: #555;
                margin-left: 100px;

                padding: 4px;

                webkit-border-top-right-radius: 8px;
                -webkit-border-bottom-right-radius: 8px;
                -moz-border-radius-topright: 8px;
                -moz-border-radius-bottomright: 8px;
                border-top-right-radius: 8px;
                border-bottom-right-radius: 8px;
                -webkit-border-top-left-radius: 20px;
                -webkit-border-bottom-left-radius: 20px;
                -moz-border-radius-topleft: 20px;
                -moz-border-radius-bottomleft: 20px;
                border-top-left-radius: 20px;
                border-bottom-left-radius: 20px;
            }
            .meter > span {
                background-color: #f00;
                height: 100%;
                display: block;


                webkit-border-top-right-radius: 8px;
                -webkit-border-bottom-right-radius: 8px;
                -moz-border-radius-topright: 8px;
                -moz-border-radius-bottomright: 8px;
                border-top-right-radius: 8px;
                border-bottom-right-radius: 8px;
                -webkit-border-top-left-radius: 20px;
                -webkit-border-bottom-left-radius: 20px;
                -moz-border-radius-topleft: 20px;
                -moz-border-radius-bottomleft: 20px;
                border-top-left-radius: 20px;
                border-bottom-left-radius: 20px;

                -webkit-box-shadow: inset 0 2px 9px rgba(255, 255, 255, 0.3), inset 0 -2px 6px rgba(0, 0, 0, 0.4);
                -moz-box-shadow: inset 0 2px 9px rgba(255, 255, 255, 0.3), inset 0 -2px 6px rgba(0, 0, 0, 0.4);
                box-shadow: inset 0 2px 9px rgba(255, 255, 255, 0.3), inset 0 -2px 6px rgba(0, 0, 0, 0.4);
            }
            .flex-wrap {
              display: -webkit-flex;
              display: -moz-flex;
              display: -ms-flex;
              display: -o-flex;
              display: flex;
              flex-wrap: wrap;
              flex-flow: row wrap;
              display: -ms-flexbox;
              -ms-flex-wrap: wrap;
              -webkit-flex-wrap: wrap;
            }
            .solr-label,
            .system-info-container label {
                width: 140px;
            }
    +body()
        .content-container
            .page-content
                h3.text-center=title
                h5 CPU Usage
                .cpu-chart-container
                hr
                h5 System Info
                .system-info-container.pull-left(style="margin-right: 15px;")
                .disk-usage-container.pull-right
                .clearfix
                label.solr-label SOLR Status
                label.label.solr-status
                hr
                h5 MongoDB Databases (Size on Disk)
                .database-container.flex-wrap
                .clearfix
                hr
                h5 Database Info
                .database-info-container
